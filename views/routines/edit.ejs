<%- include("../partials/header"); %>

<div class="routine-spacer"></div>

<div class="container form-lead">
    <h1 class="h3 mb-3 font-weight-normal">Edit <%= routine.name %></h1>
</div>
<div class="form-body">        
    <div class="form-form" class="container text-center">            
        <form action="/routines/<%= routine._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="routine[name]" value="<%= routine.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="routine[image]" value="<%= routine.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="routine[author]" value="<%= routine.author %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="routine[style]" value="<%= routine.style %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="routine[level]" value="<%= routine.level %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="routine[length]" value="<%= routine.length %>">
            </div>
            <select class="custom-select form-group" id="accessories" name="routine[accessories]" required>
                <option class="form-control" name="accessory" value="None" <%=routine.accessories==='None' ? 'selected' : '' %>>None</option>
                <option class="form-control" name="accessory" value="Belt" <%=routine.accessories==='Belt' ? 'selected' : '' %>>Belt</option>
                <option class="form-control" name="accessory" value="Strap" <%=routine.accessories==='Strap' ? 'selected' : '' %>>Strap</option>
                <option class="form-control" name="accessory" value="Both" <%=routine.accessories==='Both' ? 'selected' : '' %>>Both</option>
            </select>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/routines/<%= routine._id %>">Go back</a>
    </div>
</div>

<%- include("../partials/footer"); %>