<%- include("../partials/header"); %>

<div class="container">
    <div class="row">
            
        <h1 style="text-align: center;">Edit <%= routine.name %></h1>
        <div style="width: 30%; margin: 35px auto;">
            <form action="/routines/<%= routine._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="routine[name]" value="<%= routine.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="routine[image]" value="<%= routine.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="routine[author]" value="<%= routine.author %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/routines/<%= routine._id %>">Go back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer"); %>