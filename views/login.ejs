<%- include('partials/header'); %>

<div class="spacer"></div>

<div class="form-body">        
    <div class="form-form" class="container text-center">            
        <form class="form-signin" action="/login" method="POST">
            <div class="container form-lead">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            </div>                     
            <input type="text" name="username" class="form-control bg-dark text-white" placeholder="username" required autofocus>
            <input type="password" name="password" class="form-control bg-dark text-white" placeholder="password" required>
            <button class="btn btn-lg btn-secondary btn-block" type="submit">Sign in</button>
        </form>
    </div>
</div>
        

<%- include('partials/footer'); %>