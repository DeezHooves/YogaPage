<%- include("../partials/header"); %>

<div class="routine-spacer"></div>

<div class="container form-lead">
    <h1 class="h3 mb-3 font-weight-normal">Edit <%= routine.name %></h1>
</div>
<div class="form-body">        
    <div class="form-form" class="container text-center">            
        <form action="/routines/<%= routine._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="routine[name]" value="<%= routine.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="routine[image]" value="<%= routine.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="routine[author]" value="<%= routine.author %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="routine[style]" placeholder="<%= routine.style %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="routine[level]" placeholder="<%= routine.level %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="routine[length]" placeholder="<%= routine.length %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/routines/">Go back</a>
    </div>
</div>

<%- include("../partials/footer"); %>