<%- include("../partials/header"); %>

<div class="routine-spacer"></div>

<div class="container form-lead">
    <h1 class="h3 mb-3 font-weight-normal">Add a new routine!</h1>
</div>
<div class="form-body">        
    <div class="form-form container text-center">            
        <form action="/routines" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Routine Name" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image url" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="author" placeholder="Routine Author" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="style" placeholder="Routine Style" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="level" placeholder="Routine level" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="length" placeholder="Routine Length" required>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="accessories">Accessories?</label>
                </div>
                <select class="custom-select" id="accessories" name="accessories" required>
                  <option class="form-control" name="none" value="None" selected>None</option>
                  <option class="form-control" name="belt" value="Belt">Belt</option>
                  <option class="form-control" name="strap" value="Strap">Strap</option>
                  <option class="form-control" name="both" value="Both">Both</option>
                </select>
              </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/routines/">Go back</a>
    </div>
</div>

<%- include("../partials/footer"); %>